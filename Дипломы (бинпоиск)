#include <iostream>
#include <string>
#include <iostream>
using namespace std;
using ll = long long;
bool check(ll w, ll h, ll n) {
	if(h>1e10/w){
		return true;
	}
	return h * w >= n;
}
int main(){
	ll w, h, n;
	cin >> w >> h >> n;
	ll l = 0, r = 1e18, m = r / 2;
	while (r - l != 1) {
		if (check(m / w, m / h, n)) {
			r = m;
		}else {
			l = m;
		}
		m = (r + l) / 2;
	}
	cout << r;
}
