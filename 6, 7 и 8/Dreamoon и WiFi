#include <iostream>
#include <string>
#include <algorithm>
#include <vector>

using namespace std;
using ll = long long;

string a, b;
int a1 = 0, b1 = 0, k = 0;

void solve() {
	double cnt = 0;
	for (int i = 0; i < (1 << k); ++i) {
		int an = b1;
		for (int j = 0; j < (1 << k); ++j) {
			if ((i >> j) & 1) {
				an--;
			}
			else {
				an++;
			}
		}
		if (an == a1) {
			cnt++;
		}
	}
	cout << cnt <<" "<< ((1 << k));
}

int main(){
	cin >> a >> b;
	for (int i = 0; i < a.length(); ++i){
		char n = a[i];
		bool res = n == *"+";
		if (res) {
			a1++;
		}else {
			a1--;
		}
		n = b[i];
		res = n == *"+";
		if (res) {
			b1++;
		}else if(n == *"-") {
			b1--;
		}else {
			k++;
		}
	}
	if (k == 0) {
		cout << 1;
	}else {
		solve();
	}
}	
